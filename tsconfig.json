{
    "compilerOptions": {
        // Language and Environment
        "target": "ES2020",
        "lib": [
            "es2016",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        // Modules
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        // Type Checking
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        // Emit
        "sourceMap": true,
        "outDir": "./dist",
        // Interop Constraints
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        // Projects
        "incremental": true,
        // Output Formatting
        "pretty": true,
        // Module Resolution
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "rootDir": "src",
        "resolveJsonModule": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}